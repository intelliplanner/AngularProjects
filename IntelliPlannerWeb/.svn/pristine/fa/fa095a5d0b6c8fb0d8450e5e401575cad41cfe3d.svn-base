
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 animated fadeInLeft">
            <div class="login-txt-img col-md-12">
                <div id="carouselContent" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselContent" *ngFor="let data of sliderList; let i = index"
                            [ngClass]="{'active': i == 0}" attr.data-slide-to="{{i}}"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item text-center p-4 text-white min-height230"
                            *ngFor="let data of sliderList; let i = index" [ngClass]="{'active': i == 0}">
                           
                        </div>
                    </div>
                   
                </div>
            </div>

            <div class="login-das-box">
                <div class="col-md-12 p-0">
                    <div class="after-loop row p-3">
                        <div class="col-md-2"></div>
                        <div class="col-md-4">
                            <a href="#" class="after-loop-item card border-0 card-themes shadow-lg p-0">
                                <div
                                    class="align-items-end card-body d-flex flex-column text-right bg-gradient-primary">
                                    <h4>{{collegeCount}}</h4>
                                    <p class="w-75">{{college}}</p>
                                    <i class="fa fa-university"></i>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4">
                            <a href="#" class="after-loop-item card border-0 card-templates shadow-lg p-0">
                                <div class="align-items-end card-body d-flex flex-column text-right bg-gradient-danger">
                                    <h4>{{universityCount}}</h4>
                                    <p class="w-75">{{university}}</p>
                                    <i class="fa fa-university"></i>
                                </div>
                            </a>
                        </div>

                        
                    </div>
                </div>

                <div class="col-md-12 p-0">
                    <div class="after-loop row p-2">
                        <div class="col-md-4 pl-0">
                            <a href="#" class="after-loop-item card border-0 card-themes shadow-lg p-0">
                                <div class="align-items-end card-body d-flex flex-column text-right bg-gradient-info">
                                    <h4>{{standaloneCount}}</h4>
                                    <p class="w-75">{{standalone}}</p>
                                    <i class="fa fa-university"></i>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4">
                            <a href="#" class="after-loop-item card border-0 card-templates shadow-lg p-0">
                                <div
                                    class="align-items-end card-body d-flex flex-column text-right bg-gradient-warning">
                                    <h4>{{schoolCount}}</h4>
                                    <p class="w-75">{{school}}</p>
                                    <i class="fa fa-university"></i>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4 pr-0">
                            <a href="#" class="after-loop-item card border-0 card-guides shadow-lg p-0">
                                <div class="align-items-end card-body d-flex flex-column text-right bg-gradient-dark">
                                    <h4>{{industrialCount}}</h4>
                                    <p class="w-75">{{iti}}</p>
                                    <i class="fa fa-university"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="w-100 pl-4 pr-4 pt-4 bg-white shadow border-bottom-primary mt-0 login-box animated fadeInRight card">
                <div class=" example-form">
                    <div class="border-bottom-dark col-md-12 logintxtbox text-center">
                        <h5>Registered User Login</h5>
                    </div>
                    <form [formGroup]="loginForm">
                        <mat-form-field class="col-md-12 mt-3">
                            <input matInput autocomplete="off" formControlName="username" placeholder="User Id">
                        </mat-form-field>
                        <div class="err-msgs"
                            *ngIf="loginForm.controls['username'].dirty || loginForm.controls['username'].value || loginForm.controls['username'].touched || isFormInvalid">
                            <span *ngIf="loginForm.controls['username'].hasError('required')">Please enter
                                user id</span>
                        </div>
                        <mat-form-field class="col-md-12">
                            <input matInput autocomplete="off" [type]="show ? 'text' : 'password'"
                                formControlName="password" placeholder="Password">
                            <span class="loginshoweyecls">
                                <i (click)="password()" class="fa" style="cursor: pointer;" [ngClass]="{'fa-eye-slash': !show, 'fa-eye': show}"
                                    aria-hidden="true"></i></span>
                        </mat-form-field>
                        <div class="err-msgs"
                            *ngIf="loginForm.controls['password'].dirty || loginForm.controls['password'].value || loginForm.controls['password'].touched || isFormInvalid ">
                            <span *ngIf="loginForm.controls['password'].hasError('required')">Please enter
                                password.</span>
                        </div>
                        <!-- start captcha code -->
                        <div class="col-md-12">
                            <mat-form-field class="d-block">
                                <input matInput autocomplete="off" maxlength="15" (paste)="false" (draggable)="false"
                                    (drop)="false" (dragover)="false" formControlName="captcha"
                                    placeholder="Enter Below Verfication Code" class="textTransform" />
                            </mat-form-field>
                            <div class="mt-30">
                                <span class="font-weight-bold pt-2 pb-2 pr-2 pl-2 mr-3">Verfication Code</span>
                                <span tabindex="0"
                                    class="captcha textTransform col-md-6 captcha-text text-white p-2 text-center ">
                                    <span>{{captchaText}}</span>
                                </span>
                                <i tabindex="0" class="fa fa-refresh captcha-refresh ml-4 mt-2"
                                    (click)="getCaptcha()"></i>
                            </div>
                            <div class="err-msgs captchaeerror"
                                *ngIf="loginForm.controls['captcha'].dirty || loginForm.controls['captcha'].value || loginForm.controls['captcha'].touched || isFormInvalid ">
                                <span *ngIf="loginForm.controls['captcha'].hasError('required')">Please enter below
                                    verification code.</span>
                                <span
                                    *ngIf="loginForm.controls['captcha'].hasError('captchaNotValidError') &&loginForm.controls['captcha'].value">Please
                                    enter valid verfication code.</span>
                            </div>
                        </div>
                       
                    </form>
                </div>
                <div class="form-group mt-3">
                    <button class="btn btn-primary col-md-12" (click)="login()" type="submit">Login</button>
                    <button class="btn btn-default col-md-12 float-right text-primary outline-0"
                        (click)="clearData()">Clear</button>
                    <!-- <button class="btn btn-sm col-md-12 float-left p-0 text-left text-secondary" (click)="forgotPassword()">Forgot Password</button> -->
                    <!-- <button mat-button (click)="openDialog()">Forgot Password</button>  -->
                    <p class="forgot-password" (click)="openDialog()">Forgot Password</p>  
                </div>
            </div>
        </div>
    </div>
</div>

<p-dialog [(visible)]="display" appendTo ="body" [modal]="true" [draggable]="false" class="cusomdialog-addfield"
    [style]="{width:'350px',minWidth:'70',minY:'70' }" [contentStyle]="{'overflow':'visible'}" [baseZIndex]="10000"
    [responsive]="true" [closable]="false">
    <p-header>
        Forgot Password
    </p-header>
    <form [formGroup]="emailForm">
        <div class="form-group">
            <div class="form-row">
                
                <div class="col-md-12">
                    <mat-form-field class="d-block">
                        <input matInput placeholder="Email" autocomplete="off" formControlName="email"
                            required>
                    </mat-form-field>
                    <div class="err-msgs"
                        *ngIf="emailForm.controls['email'].value || emailForm.controls['email'].dirty || emailForm.controls['email'].touched || isFormInvalid">
                        <span *ngIf="emailForm.controls['email'].hasError('required')">Please
                            enter registered email.</span>
                        <span *ngIf="emailForm.controls['email'].hasError('pattern')">Please Enter
                            Valid
                            Email</span>
                    </div>
                </div>
            </div>
        </div>
    </form>


    <p-footer>
        <button type="submit" class="btn btn-sm btn-primary" (click)="sendOTP()" [disabled]="emailForm.invalid">Submit</button>
        <button type="button" class="btn btn-sm btn-light" (click)="hideDialog()">Cancel</button>
    </p-footer>

</p-dialog>
<div *ngIf="backdrop" class="backdrop"></div>
            

 