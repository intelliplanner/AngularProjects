<div class="container-fluid reg-page-bg p-4">

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ol class="breadcrumb bg-primary ">
                    <li class="breadcrumb-item active text-white">Sign Up</li>
                </ol>
            </div>
        </div>
    </div>

    <div class="container">
        <form [formGroup]="signUpForm">
            <div class="animated fadeInDown card shadow mb-4 p-4">
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <mat-form-field class="example-full-width d-block">
                                <input autocomplete="off" matInput placeholder="Name" value="" required
                                    formControlName="name">
                            </mat-form-field>
                            <div class="err-msgs"
                                *ngIf="signUpForm.controls['name'].dirty || signUpForm.controls['name'].value || signUpForm.controls['name'].touched || isFornInvalid ">
                                <span *ngIf="signUpForm.controls['name'].hasError('required')">Please enter
                                    name.</span>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <mat-form-field class="example-full-width d-block">
                                <input autocomplete="off" matInput placeholder="рдирд╛рдо" value="" required
                                    formControlName="nameHindi">
                            </mat-form-field>
                            <div class="err-msgs"
                                *ngIf="signUpForm.controls['nameHindi'].dirty || signUpForm.controls['nameHindi'].value || signUpForm.controls['nameHindi'].touched || isFornInvalid ">
                                <span *ngIf="signUpForm.controls['nameHindi'].hasError('required')">Please enter
                                    name in hindi.</span>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <mat-form-field class="example-full-width d-block">
                                <input autocomplete="off" matInput placeholder="Email ID" value="" required
                                    formControlName="emailId">
                            </mat-form-field>
                            <div class="err-msgs"
                                *ngIf="signUpForm.controls['emailId'].dirty || signUpForm.controls['emailId'].value || signUpForm.controls['emailId'].touched || isFornInvalid ">
                                <span *ngIf="signUpForm.controls['emailId'].hasError('required')">Please enter
                                    email id.</span>
                                <span *ngIf="signUpForm.controls['emailId'].hasError('pattern')">Please Enter Valid
                                    Email</span>
                            </div>

                        </div>

                        <div class="col-md-6">
                            <mat-form-field class="example-full-width d-block">
                                <input type="text" autocomplete="off" matInput placeholder="Mobile No." value=""
                                    required formControlName="mobileNo" (keypress)="restrictNumeric($event)"
                                    maxlength="10" minlength="10">
                            </mat-form-field>
                            <div class="err-msgs"
                                *ngIf="signUpForm.controls['mobileNo'].dirty || signUpForm.controls['mobileNo'].value || signUpForm.controls['mobileNo'].touched || isFornInvalid ">
                                <span *ngIf="signUpForm.controls['mobileNo'].hasError('required')">Please enter
                                    mobile no.</span>
                                <span *ngIf="signUpForm.controls['mobileNo'].hasError('minlength')">Please enter
                                    10 digit mobile no.</span>
                            </div>

                        </div>

                        <!-- start captcha code -->
                        <div class="col-md-12">
                            <mat-form-field class="d-block col-md-6 p-0 float-left">
                                <input matInput autocomplete="off" maxlength="15" (paste)="false" (draggable)="false"
                                    (drop)="false" (dragover)="false" placeholder="Verification Code"
                                    class="textTransform" formControlName="verificationCode" />
                            </mat-form-field>

                            <div class="mt-30 float-left ml-1">
                                <span tabindex="0"
                                    class="captcha textTransform col-md-6 captcha-text text-white p-2 text-center ">
                                    <span>{{captchaText}}</span>
                                </span>
                                <i tabindex="0" class="fa fa-refresh captcha-refresh ml-4 mt-2"
                                    (click)="getCaptcha()"></i>
                            </div>

                        </div>
                        <div class="err-msgs"
                            *ngIf="signUpForm.controls['verificationCode'].dirty || signUpForm.controls['verificationCode'].value || signUpForm.controls['verificationCode'].touched || isFornInvalid ">
                            <span *ngIf="signUpForm.controls['verificationCode'].hasError('required')">Please enter
                                verification code.</span>
                            <span
                                *ngIf="signUpForm.controls['verificationCode'].hasError('captchaNotValidError') && signUpForm.controls['verificationCode'].value">Please
                                enter valid verification code.</span>
                        </div>
                        <!-- end captcha code -->
                    </div>
                </div>
            </div>
        </form>



        <hr>
        <div class="form-group float-right">
            <button class="btn btn-success btn-sm" (click)="sendUserDetails()">Send </button>
            &nbsp;
            <button class="btn btn-light btn-sm" (click)="resetUserDetails()">Reset </button>
        </div>
    </div>
</div>
