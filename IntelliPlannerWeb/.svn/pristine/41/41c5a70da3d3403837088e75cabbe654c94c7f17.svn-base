<div class="mcare-topbar-info ">
    <div class="container-fluid mainheader-bg">
        <div class="row">
            <div class="col-lg-4 col-md-4 common-left">
                <ul class="listtypenone mt-1" style="padding-left: 1rem !important;">
                    <!-- <li class="nationanemblm">
                        &nbsp;
                    </li> -->
                    <li class="topbartext-color">
                        <a title="National Portal of India" target="_blank" href="#" class="topbartext-color">
                            भारत सरकार<br>GOVERNMENT OF INDIA
                        </a>
                    </li>
                    <li class="topbartext-color ministry">
                        <a title="National Informatics Centre" target="_blank" href="#" class="topbartext-color">
                            शिक्षा मंत्रालय<br>MINISTRY OF EDUCATION
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-md-8 selectlang-colr">
                <button class="btn btn-outline-light  btn-sm mt-0 mb-0  float-right" *ngIf="!showLoginButton"
                    (click)="signUp()"><i class="fas fa-sign-in-alt"></i>&nbsp;Sign Up </button>
                <button (click)="login()" class="btn btn-outline-light btn-sm mt-0 mb-0 mr-3 float-right"
                    *ngIf="showLoginButton"><i class="fas fa-user"></i>&nbsp;Login
                </button>


                <mat-form-field class="login-lang-select float-right mr-3">
                    <mat-select [(value)]="defaultLanguage" (selectionChange)="submitLangId($event)">
                        <mat-option *ngFor="let data of languages" [value]="data.id">
                            {{data.languageName}}
                        </mat-option>
                    </mat-select>
                </mat-form-field>


                <div class="float-right mr-2 ml-2 checkbox-header">
                    <input type="checkbox" class="float-left pl-0" (change)="bilingual($event.target)">
                </div>
                <div class="float-right matFont">
                    <mat-label>Language/भाषा:</mat-label>
                </div>

                <div class="float-right mr-3 skip-content">
                    <a title="Skip to main content" href="javascript:scroll(mainContent)"
                        style="color: white;font-size: 11px">
                        <i class="fa fa-arrow-down"></i> {{skip}}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



